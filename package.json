{
  "name": "@evenius/erx",
  "version": "0.0.0",
  "description": "Minimal observables",
  "scripts": {
    "deploy": "npm publish --access=public",
    "prepublishOnly": "npm run test",
    "prepare": "npm run build",
    "build": "npm run cleanup && babel src --out-dir . --extensions '.ts' --source-maps inline && tsc --emitDeclarationOnly && npm run generate-flow-defs",
    "cleanup": "rimraf ./*.d.ts ./*.js ./*.js.flow ./util",
    "generate-flow-defs": "flowgen --add-flow-header ./ && copyfiles -u 1 -V 'exports/**/*.flow' . && rm -rf exports",
    "test:cover": "nyc --reporter=lcov --reporter=text mocha test/* -r tsx --exit",
    "test:ci": "nyc mocha test/* -r tsx  --reporter mocha-junit-reporter --exit --reporter-options mochaFile=reports/test-results.xml",
    "test": "mocha test/* -r tsx --exit",
    "test:lint": "eslint src",
    "report": "nyc report --reporter=lcov --reporter=text"
  },
  "author": "Bodil Stokke (now EveniusGill)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/evenius/erx"
  },
  "homepage": "https://github.com/evenius/fsm#readme",
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.flow",
    "util",
    "README.md",
    "COPYING",
    "COPYING.LESSER"
  ],
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/asap": "^2.0.1",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/sinon": "^10.0.20",
    "@types/sinon-chai": "^3.2.11",
    "chai": "^4.3.10",
    "copyfiles": "^2.4.1",
    "eslint": "^8.51.0",
    "flowgen": "^1.21.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "sinon": "^16.1.3",
    "sinon-chai": "^3.7.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-undef": 0,
      "no-shadow": 0,
      "no-use-before-define": 0,
      "strict": 0,
      "no-inner-declarations": 0,
      "no-unused-vars": 0,
      "new-cap": 0,
      "no-underscore-dangle": 0,
      "no-var": 2,
      "indent": [
        2,
        2
      ],
      "brace-style": [
        1,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "comma-style": [
        2,
        "last"
      ],
      "eol-last": 2,
      "no-lonely-if": 2,
      "quotes": [
        2,
        "double"
      ],
      "space-after-keywords": 2,
      "space-before-blocks": 1,
      "space-before-function-parentheses": [
        2,
        "never"
      ],
      "space-in-parens": [
        2,
        "never"
      ],
      "spaced-line-comment": 2
    },
    "globals": {
      "super": true
    }
  },
  "dependencies": {
    "@types/node": "^20.8.7",
    "asap": "^2.0.6"
  }
}
